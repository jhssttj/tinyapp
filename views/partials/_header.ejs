<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(!username){ %>
      <form class="form-inline" action="/login" method="GET">
        <div class="form-group mb-2" style = "margin: 0 auto" >
          <label for="username"></label>
          <button type="submit" class="btn btn-primary"style = 'color:black; background: rgba(0,0,0,0); border-color:black' >Login</button>
        </div>
      </form>
      <form class="form-inline" action="/register" method="GET">
        <div class="form-group mb-2" style = "margin: 0 auto" >
          <button type="submit" class="btn btn-primary"style = 'color:black; background: rgba(0,0,0,0); border-color:black'>Register</button>
        </div>
      </form>
    <% } else{ %>  
      <form class="form-inline" action="/logout" method="POST">
        <a>Logged in as: <%= username.email %></a>
        <div class="form-group mb-2" style = "margin: 0 auto" >
          <button type="submit" class="btn btn-primary"style = 'color:black; background: rgba(0,0,0,0); border-color:black'>Logout</button>
        </div>
      </form>
      <form class="form-inline" action="/register" method="GET">
        <div class="form-group mb-2" style = "margin: 0 auto" >
          <button type="submit" class="btn btn-primary"style = 'color:black; background: rgba(0,0,0,0); border-color:black'>Register</button>
        </div>
      </form>
   <% } %>
  </nav>
</header>